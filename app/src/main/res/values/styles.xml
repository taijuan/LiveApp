<resources>

    <style name="WhiteBackgroundTheme" parent="QMUI.Compat.NoActionBar">
        <item name="QMUITopBarStyle">@style/WhiteTopBar</item>
        <item name="android:windowBackground">@color/backgroundWhite</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="qmui_topbar_height">48dp</item>
    </style>

    <style name="GrayBackgroundTheme" parent="WhiteBackgroundTheme">
        <item name="QMUITopBarStyle">@style/WhiteTopBar</item>
        <item name="android:windowBackground">@color/backgroundGray</item>
    </style>

    <style name="BlackBackgroundTheme" parent="WhiteBackgroundTheme">
        <item name="QMUITopBarStyle">@style/TransparentTranTopBar</item>
        <item name="android:windowBackground">@color/backgroundBlack</item>
    </style>

    <style name="WelcomeTheme" parent="WhiteBackgroundTheme">
        <item name="android:windowBackground">@drawable/hk_welcome_start</item>
    </style>

    <style name="WhiteTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@color/backgroundWhite</item>
        <item name="qmui_topbar_need_separator">true</item>
        <item name="qmui_topbar_title_color">@color/textBlack</item>
        <item name="qmui_topbar_title_text_size">20sp</item>
    </style>

    <style name="TransparentTranTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@android:color/transparent</item>
        <item name="qmui_topbar_need_separator">true</item>
        <item name="qmui_topbar_title_color">@color/textBlack</item>
        <item name="qmui_topbar_title_text_size">20sp</item>
    </style>

    <style name="LoginHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/textBlue</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="LoginTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorHint">@color/lineGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <declare-styleable name="AspectRatioFrameLayout">
        <attr name="resize_mode" />
    </declare-styleable>

    <declare-styleable name="DefaultTimeBar">
        <attr name="bar_height" />
        <attr name="touch_target_height" />
        <attr name="ad_marker_width" />
        <attr name="scrubber_enabled_size" />
        <attr name="scrubber_disabled_size" />
        <attr name="scrubber_dragged_size" />
        <attr name="scrubber_drawable" />
        <attr name="played_color" />
        <attr name="scrubber_color" />
        <attr name="buffered_color" />
        <attr name="unplayed_color" />
        <attr name="ad_marker_color" />
        <attr name="played_ad_marker_color" />
    </declare-styleable>
</resources>

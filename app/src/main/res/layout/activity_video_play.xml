<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.live.widget.AspectRatioFrameLayout
            android:id="@+id/aspectRatioFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <TextureView
                android:id="@+id/playerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
    </com.live.widget.AspectRatioFrameLayout>

    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.QMUITopBarLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:visibility="gone"
                tools:visibility="visible">

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/hk_play_back"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="60dp"
                    android:textColor="@color/textWhite"
                    android:textSize="18sp" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawableEnd="@drawable/hk_share"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:scaleType="fitCenter"
                    app:qmui_border_width="0dp"
                    app:qmui_corner_radius="0dp" />
        </com.qmuiteam.qmui.widget.QMUITopBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/timeBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:progressDrawable="@drawable/hk_progress_drawable"
                    android:thumb="@drawable/hk_thumb"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
                    android:id="@+id/btnPlayAndPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/hk_bottom_play"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tvTime"
                    app:layout_constraintTop_toBottomOf="@+id/timeBar" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:textColor="@color/textWhite"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/btnPlayAndPause"
                    app:layout_constraintRight_toLeftOf="@+id/btnScreen"
                    app:layout_constraintTop_toBottomOf="@+id/timeBar" />


            <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
                    android:id="@+id/btnScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/hk_play_screen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tvTime"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeBar" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
                android:id="@+id/btnAction"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/hk_loading"
                android:visibility="gone" />

    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
</merge>
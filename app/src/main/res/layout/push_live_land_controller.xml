<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:background="@color/background66"
            app:layout_constraintLeft_toLeftOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/hk_push_live_settings"
            app:layout_constraintBottom_toTopOf="@+id/btnX1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnX1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/hk_push_live_x1"
            app:layout_constraintBottom_toTopOf="@+id/btnSwitchCamera"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSettings" />


    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/hk_push_live_switch_camera"
            app:layout_constraintBottom_toTopOf="@+id/btnFlash"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnX1" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/hk_push_live_flash"
            app:layout_constraintBottom_toTopOf="@+id/btnClose"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSwitchCamera" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/hk_push_live_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFlash" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tvTime"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="45dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_backgroundColor="@color/background66"
            app:qmui_borderWidth="0dp"
            tools:text="00:00:00" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="57dp"
            android:src="@drawable/hk_push_live_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tvDestination"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:qmui_backgroundColor="@color/background66"
            app:qmui_borderWidth="0dp"
            tools:text="Destination" />
</androidx.constraintlayout.widget.ConstraintLayout>
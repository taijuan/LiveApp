<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/background66"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/hk_push_live_close"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnFlash"
            app:layout_constraintTop_toTopOf="parent" />


    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/hk_push_live_flash"
            app:layout_constraintLeft_toRightOf="@+id/btnClose"
            app:layout_constraintRight_toLeftOf="@+id/btnSwitchScreen"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnSwitchScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/hk_push_live_switch_screen"
            app:layout_constraintLeft_toRightOf="@+id/btnFlash"
            app:layout_constraintRight_toLeftOf="@+id/btnSwitchCamera"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/hk_push_live_switch_camera"
            app:layout_constraintLeft_toRightOf="@+id/btnSwitchScreen"
            app:layout_constraintRight_toLeftOf="@+id/btnSettings"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/hk_push_live_settings"
            app:layout_constraintLeft_toRightOf="@+id/btnSwitchCamera"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAction"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnAction"
            app:layout_constraintTop_toTopOf="@+id/btnAction"
            app:qmui_backgroundColor="@color/background66"
            app:qmui_borderWidth="0dp"
            tools:text="Destination" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/hk_push_live_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAction"
            app:layout_constraintLeft_toRightOf="@+id/btnAction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnAction"
            app:qmui_backgroundColor="@color/background66"
            app:qmui_borderWidth="0dp"
            tools:text="00:00:00" />
</androidx.constraintlayout.widget.ConstraintLayout>
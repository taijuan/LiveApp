<?xml version="1.0" encoding="utf-8"?>
<com.live.widget.QMUIConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/backgroundWhite"
        app:qmui_radius="8dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,335:177"
            app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hk_play"
            app:layout_constraintBottom_toBottomOf="@id/imgCover"
            app:layout_constraintLeft_toLeftOf="@id/imgCover"
            app:layout_constraintRight_toRightOf="@id/imgCover"
            app:layout_constraintTop_toTopOf="@id/imgCover" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Hyundai, S.Korea eye deal on low-cost carmaking venture"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgCover" />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEvent"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="APP Name"
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/imgCover"
            app:layout_constraintTop_toBottomOf="@+id/imgCover" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTime"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/hk_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvTime"
            app:layout_constraintTop_toBottomOf="@+id/imgCover"
            app:tint="@color/textBlack" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="@string/live_time_format"
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCover" />


</com.live.widget.QMUIConstraintLayout>
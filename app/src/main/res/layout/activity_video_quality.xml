<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvResolution"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/resolution"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnResolution540P"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/resolution_540p"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvResolution" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnResolution720P"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/resolution_720p"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnResolution540P" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnResolution1080P"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/resolution_1080p"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnResolution720P" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAudioEncodeMode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/quality_mode"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnResolution1080P" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnFluencyFirst"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/quality_fluency_first"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvAudioEncodeMode" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnResolutionFirst"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/quality_resolution_first"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnFluencyFirst" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVideoEncodeMode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/encode_mode"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/btnResolutionFirst" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnVideoEncodeHard"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/video_encode_hard"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVideoEncodeMode" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnVideoEncodeSoft"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/video_encode_soft"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnVideoEncodeHard" />


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBeautyMode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/video_beauty_mode"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/btnVideoEncodeSoft" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnBeautynormal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/video_beauty_normal"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvBeautyMode" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                    android:id="@+id/btnBeautyProfessional"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:drawableEnd="@drawable/hk_check"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/video_beauty_professional"
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btnBeautynormal" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" />
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>